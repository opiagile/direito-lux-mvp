# =============================================================================
# DIREITO LUX - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update with your values

# =============================================================================
# EXTERNAL APIs
# =============================================================================

# DataJud API (obter em: https://datajud.cnj.jus.br)
DATAJUD_API_KEY=your_datajud_api_key_here

# OpenAI API (para AI Service)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Hugging Face (modelos alternativos)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================

# WhatsApp Business API URL e Token
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=your_whatsapp_business_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# WhatsApp Webhook Verification
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration (para produção)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@direitolux.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_NAME=Direito Lux
SMTP_FROM_EMAIL=noreply@direitolux.com

# SendGrid (alternativa)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# =============================================================================
# TELEGRAM BOT
# =============================================================================

# Telegram Bot Token (obter em: https://t.me/BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_password

# Realm Configuration
KEYCLOAK_REALM=direito-lux
KEYCLOAK_CLIENT_ID=direito-lux-api
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=direito_lux_dev
DB_USER=direito_lux
DB_PASSWORD=your_secure_db_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# MESSAGE BROKER CONFIGURATION
# =============================================================================

# RabbitMQ
RABBITMQ_USER=direito_lux
RABBITMQ_PASSWORD=your_secure_rabbitmq_password
RABBITMQ_VHOST=direito_lux
RABBITMQ_URL=amqp://direito_lux:your_secure_rabbitmq_password@rabbitmq:5672/direito_lux

# =============================================================================
# OBSERVABILITY
# =============================================================================

# Jaeger
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1

# Prometheus
PROMETHEUS_PUSHGATEWAY_URL=http://prometheus:9091

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Google Cloud Storage (para documentos)
GCS_BUCKET_NAME=direito-lux-documents-dev
GCS_PROJECT_ID=direito-lux-dev
GOOGLE_APPLICATION_CREDENTIALS=/app/config/gcp-service-account.json

# Local Storage (desenvolvimento)
LOCAL_STORAGE_PATH=/app/storage

# =============================================================================
# SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_256_bits_minimum
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true

# Service URLs (internal communication)
AUTH_SERVICE_URL=http://auth-service:8080
TENANT_SERVICE_URL=http://tenant-service:8080
PROCESS_SERVICE_URL=http://process-service:8080
DATAJUD_SERVICE_URL=http://datajud-service:8080
NOTIFICATION_SERVICE_URL=http://notification-service:8080
AI_SERVICE_URL=http://ai-service:8000

# External URLs (for webhooks and callbacks)
PUBLIC_BASE_URL=http://localhost:8000
WEBHOOK_BASE_URL=http://localhost:8000/webhooks

# =============================================================================
# DATAJUD CONFIGURATION
# =============================================================================

# DataJud API Configuration
DATAJUD_API_URL=https://api-publica.datajud.cnj.jus.br
DATAJUD_RATE_LIMIT_DAILY=10000
DATAJUD_CACHE_TTL_HOURS=24
DATAJUD_TIMEOUT_SECONDS=30
DATAJUD_RETRY_ATTEMPTS=3

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# Model Configuration
AI_MODEL_CACHE_SIZE=1000
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.3
AI_MAX_CONCURRENT_REQUESTS=10

# Local Models Path
AI_MODELS_PATH=/app/models

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@direitolux.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# Grafana
GF_SECURITY_ADMIN_PASSWORD=your_grafana_password

# Redis Commander
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=your_redis_ui_password

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_AI_ADVANCED=false
FEATURE_JURIMETRY=false
FEATURE_DOCUMENT_GENERATION=true
FEATURE_WHATSAPP_BUSINESS=true
FEATURE_TELEGRAM_NOTIFICATIONS=true
FEATURE_ANALYTICS_DASHBOARD=true

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Tenant Quotas (default values)
DEFAULT_PROCESS_LIMIT=50
DEFAULT_USERS_LIMIT=5
DEFAULT_STORAGE_LIMIT_GB=5
DEFAULT_NOTIFICATIONS_LIMIT=500

# DataJud Quota Distribution by Plan
STARTER_DATAJUD_QUOTA=100
PROFESSIONAL_DATAJUD_QUOTA=500
BUSINESS_DATAJUD_QUOTA=2000
ENTERPRISE_DATAJUD_QUOTA=5000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-ID

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session Settings
SESSION_SECRET=your_session_secret_key_here
SESSION_TIMEOUT=1800
SESSION_STORE=redis

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_for_signature_validation

# Webhook Retry Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_BACKOFF=exponential
WEBHOOK_TIMEOUT=30s