FROM --platform=linux/arm64 golang:1.21-alpine

WORKDIR /app

# Instalar dependências básicas
RUN apk add --no-cache git

# Copiar go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copiar código
COPY . .

# Build simples
RUN go build -o server cmd/server/main.go

EXPOSE 8080
CMD ["./server"]
