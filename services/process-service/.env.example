# =============================================================================
# Process Service - Environment Variables
# =============================================================================

# Application
SERVICE_NAME=process-service
PORT=8083
LOG_LEVEL=debug
ENVIRONMENT=development
VERSION=1.0.0

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=direito_lux_dev
DB_USER=direito_lux
DB_PASSWORD=dev_password_123
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300s

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123
REDIS_DATABASE=1
REDIS_POOL_SIZE=10

# RabbitMQ
RABBITMQ_URL=amqp://direito_lux:dev_rabbit_123@rabbitmq:5672/direito_lux
RABBITMQ_EXCHANGE=direito_lux.events
RABBITMQ_ROUTING_KEY=process_service
RABBITMQ_QUEUE=process_service.events

# Observabilidade
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_SERVICE_NAME=process-service
METRICS_ENABLED=true
METRICS_PORT=9090

# External Services
AUTH_SERVICE_URL=http://auth-service:8081
TENANT_SERVICE_URL=http://tenant-service:8082
DATAJUD_SERVICE_URL=http://datajud-service:8084
NOTIFICATION_SERVICE_URL=http://notification-service:8085
AI_SERVICE_URL=http://ai-service:8000

# CQRS Configuration
CQRS_ENABLED=true
WRITE_DB_POOL_SIZE=10
READ_DB_POOL_SIZE=20
EVENT_STORE_ENABLED=true

# Process Configuration
MAX_PROCESSES_PER_TENANT=1000
MONITORING_INTERVAL_HOURS=24
AUTO_SYNC_ENABLED=true
CACHE_TTL_MINUTES=60

# DataJud Integration
DATAJUD_TIMEOUT_SECONDS=30
DATAJUD_RETRY_ATTEMPTS=3
DATAJUD_RATE_LIMIT_PER_MINUTE=100

# Search Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
SEARCH_INDEX_PREFIX=direito_lux_processes
SEARCH_ENABLED=true
FULL_TEXT_SEARCH=true