# Service Configuration
SERVICE_NAME=ai-service
VERSION=1.0.0
ENVIRONMENT=development
PORT=8000
LOG_LEVEL=info

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=direito_lux_dev
DB_USER=direito_lux
DB_PASSWORD=dev_password_123
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123
REDIS_DB=1

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=direito_lux
RABBITMQ_PASSWORD=dev_rabbit_123
RABBITMQ_VHOST=direito_lux
RABBITMQ_EXCHANGE=direito_lux.events
RABBITMQ_QUEUE=ai-service.events

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDINGS_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# HuggingFace Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
HUGGINGFACE_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Vector Database
VECTOR_STORE_TYPE=faiss
PGVECTOR_TABLE_NAME=legal_embeddings
FAISS_INDEX_PATH=/app/data/faiss_index

# AI Service Settings
EMBEDDING_DIMENSION=384
MAX_SEARCH_RESULTS=50
SIMILARITY_THRESHOLD=0.7
CACHE_TTL=3600

# Jurisprudence Sources
ENABLE_STF_COLLECTOR=true
ENABLE_STJ_COLLECTOR=true
ENABLE_REGIONAL_COLLECTORS=false
COLLECTOR_BATCH_SIZE=100
COLLECTOR_RATE_LIMIT=10

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# External Services
AUTH_SERVICE_URL=http://auth-service:8080
TENANT_SERVICE_URL=http://tenant-service:8080
PROCESS_SERVICE_URL=http://process-service:8080
DATAJUD_SERVICE_URL=http://datajud-service:8080

# Observability
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]