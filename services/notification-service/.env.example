# =============================================================================
# NOTIFICATION SERVICE - CONFIGURAÇÕES DE EXEMPLO
# =============================================================================
# IMPORTANTE: Copie este arquivo para .env e preencha com valores reais
# cp .env.example .env

# =============================================================================
# TELEGRAM BOT (STAGING/PRODUÇÃO)
# =============================================================================
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================
WHATSAPP_ACCESS_TOKEN=YOUR_WHATSAPP_ACCESS_TOKEN_HERE
WHATSAPP_PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID_HERE
WHATSAPP_BUSINESS_ACCOUNT_ID=YOUR_BUSINESS_ACCOUNT_ID_HERE
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhook/whatsapp
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=contato@direitolux.com.br
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD_HERE
SMTP_FROM=contato@direitolux.com.br

# =============================================================================
# SERVIÇOS EXTERNOS
# =============================================================================
# OpenAI (opcional - Ollama é padrão)
OPENAI_API_KEY=YOUR_OPENAI_KEY_HERE

# Twilio (SMS)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN

# =============================================================================
# BANCO DE DADOS
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=direito_lux
DB_PASSWORD=direito_lux_pass
DB_NAME=direito_lux
